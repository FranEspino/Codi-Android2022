<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/info_window"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:background="@drawable/info_window"
            android:padding="10dp">


                <ImageView
                    android:id="@+id/iv_investigador_windowsinfo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logowindow" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title_windowsinfo"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:padding="2dp"
                    android:text="Agusto B. Leguia 420"
                    android:textColor="#19142B"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/tv_description_windowsinfo"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="30dp"
                    android:padding="2dp"

                    android:text="Tu ubicacion de destino 📍 "
                    android:textColor="#19142B"
                    android:textSize="11dp" />
            </LinearLayout>


        </LinearLayout>



</LinearLayout>